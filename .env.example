# От: https://supabase.com/dashboard/project/your-project/settings/api
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=...your_anon_key
SUPABASE_SERVICE_KEY=...your_service_role_key

JWT_SECRET=your_very_secure_jwt_secret_at_least_32_characters_long_here
JWT_EXPIRES_IN=7d

# От: https://aistudio.google.com/app/apikey
