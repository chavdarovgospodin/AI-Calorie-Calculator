NODE_ENV=development
PORT=3000

ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,http://localhost:8081

THROTTLE_TTL=60000
THROTTLE_LIMIT=100
HELMET_ENABLED=true

API_BASE_URL=http://localhost:3000

LOG_LEVEL=debug
ENABLE_SWAGGER=true

