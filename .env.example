# =============================================================================
# Calorie Tracker - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# Supabase Configuration
# =============================================================================
# Get these from: https://supabase.com/dashboard/project/your-project/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# =============================================================================
# JWT Configuration
# =============================================================================
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your_very_secure_jwt_secret_here_at_least_32_characters_long
JWT_EXPIRES_IN=7d

# =============================================================================
# Google AI Configuration
# =============================================================================
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# Database Configuration (for local development)
# =============================================================================
# Only needed if running local PostgreSQL instead of Supabase
DATABASE_URL=postgresql://dev:devpass@localhost:5432/calorie_tracker_dev

# =============================================================================
# Mobile App Configuration
# =============================================================================
# Backend API URL for mobile app
API_BASE_URL=http://localhost:3000

# =============================================================================
# Optional: Third-party integrations
# =============================================================================
# SENTRY_DSN=your_sentry_dsn_here
# STRIPE_SECRET_KEY=your_stripe_secret_key_here


# Security Settings
THROTTLE_TTL=60000
THROTTLE_LIMIT=100
HELMET_ENABLED=true