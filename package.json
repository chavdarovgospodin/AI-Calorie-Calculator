{
  "name": "calorie-tracker",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered calorie tracking monorepo",
  "author": "Your Name",
  "license": "MIT",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run mobile:dev\"",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "npm run type-check --workspaces",
    "backend:dev": "npm run start:dev --workspace=apps/backend",
    "mobile:dev": "npm run start --workspace=apps/mobile",
    "backend:build": "npm run build --workspace=apps/backend",
    "mobile:build": "npm run build --workspace=apps/mobile",
    "setup": "npm install && npm install --workspaces"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  }
}
