// apps/mobile/app.json
{
  "expo": {
    "name": "Calorie Tracker",
    "slug": "calorie-tracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.calorietracker",
      "infoPlist": {
        "NSHealthShareUsageDescription": "Приложението има нужда от достъп до вашите здравни данни, за да следи изгорените калории и физическата активност",
        "NSHealthUpdateUsageDescription": "Приложението има нужда от достъп за актуализиране на вашите здравни данни",
        "NSMotionUsageDescription": "Приложението използва данни за движение, за да следи физическата ви активност",
        "NSLocationWhenInUseUsageDescription": "Приложението има нужда от локация за проследяване на активности на открито",
        "NSPhotoLibraryUsageDescription": "Приложението има нужда от достъп до вашата фото библиотека, за да изберете снимки",
        "NSCameraUsageDescription": "Приложението има нужда от достъп до камерата, за да правите снимки"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.yourcompany.calorietracker",
      "permissions": [
        "ACTIVITY_RECOGNITION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "BODY_SENSORS",
        "INTERNET",
        "CAMERA",
        "MEDIA_LIBRARY"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
